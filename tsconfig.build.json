{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "strict": true,
    "lib": ["es2020", "WebWorker"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": ["akamai-edgeworkers", "node"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}