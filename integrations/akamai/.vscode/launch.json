{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "program": "${workspaceFolder}/node_modules/tape/bin/tape",
            "args": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "${file}"
            ],
            "console": "internalConsole",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
        }
    ]
}
